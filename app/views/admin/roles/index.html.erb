<p id="notice"><%= notice %></p>

<h1>Listing Admin Roles</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Description</th>
      <th>Active</th>
      <th>Created by</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |admin_role| %>
      <tr>
        <td><%= admin_role.label %></td>
        <td><%= admin_role.description %></td>
        <td><%= admin_role.active %></td>
        <td><%= admin_role.created_by %></td>
        <td><%= admin_role.created_at %></td>
        <td><%= link_to 'Show', admin_role %></td>
        <td><%= link_to 'Edit', edit_admin_role_path(admin_role) %></td>
        <td><%= link_to 'Destroy', admin_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

